<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
 
	<!-- appender name="stdout" class="org.apache.log4j.ConsoleAppender">
	   <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n"/>
		</layout>
	</appender-->
	<appender name="FILE_APPENDER" class="org.apache.log4j.RollingFileAppender">
		<param name="MaxFileSize" value="5000KB" />
		<param name="MaxBackupIndex" value="5" />
		<param name="File" value="/tmp/abife.log" />
		<param name="Append" value="true" />		
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"	value="%d{yyyy MM dd HH:mm:ss} %-5p %C.%M (%F:%L) - %m%n" />
		</layout>
	</appender>
	
    <!-- org.apache.commons.httpclient -->
    <category name="it.inera">
		<level value="debug" />
		<appender-ref ref="FILE_APPENDER" />
		<!--appender-ref ref="stdout" /-->
	</category>
    <category name="org.quartz.plugins.history.LoggingJobHistoryPlugin">
		<level value="OFF" />
	</category>
    <root>
	  	<priority value="info"></priority>
	  	<appender-ref ref="FILE_APPENDER" />
	  	<!--appender-ref ref="stdout"/-->
	</root>
</log4j:configuration>