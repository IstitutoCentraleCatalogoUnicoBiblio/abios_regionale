<?xml version="1.0" encoding="UTF-8" ?>

<schema name="comune core" version="1.2">

  <types>
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>
    <fieldType name="tint" class="solr.TrieIntField" precisionStep="8" omitNorms="true" positionIncrementGap="0"/>
    <fieldType name="text_rev" class="solr.TextField" positionIncrementGap="100">
      <analyzer>
        <tokenizer class="solr.WhitespaceTokenizerFactory"/>
        <filter class="solr.ReversedWildcardFilterFactory" withOriginal="true" maxPosAsterisk="3" maxPosQuestion="2" maxFractionAsterisk="0.33"/>
      </analyzer>
    </fieldType>
    <fieldType name="textstr_accent_fl" class="solr.TextField" positionIncrementGap="100">
      <analyzer>
        <tokenizer class="solr.KeywordTokenizerFactory"/>
    	<filter class="solr.LowerCaseFilterFactory"/>
        <filter class="solr.ASCIIFoldingFilterFactory"/>
      </analyzer>
    </fieldType>
 </types>


	<fields>
		<field name="id_comune" type="tint" indexed="true" stored="true" required="true" />
		<field name="comune" type="textstr_accent_fl" indexed="true"  stored="true"/>
		<field name="provincia" type="textstr_accent_fl" indexed="true" stored="true"/>
		<field name="regione" type="textstr_accent_fl" indexed="true" stored="true"/>
	</fields>
	<uniqueKey>id_comune</uniqueKey>
	<defaultSearchField>comune</defaultSearchField>
	<solrQueryParser defaultOperator="AND"/>
</schema>
